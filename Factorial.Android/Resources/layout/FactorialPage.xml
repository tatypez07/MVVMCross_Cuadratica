
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:local="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:padding="20dp"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textSize="24dp"
    	android:text="VAlor A:" />
	<EditText
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:inputType="number|numberDecimal"
    	android:textSize="24dp"
    	android:gravity="right"
    	local:MvxBind="Text A" />
    <TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textSize="24dp"
    	android:text="VAlor B:" />
    <EditText
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:inputType="number|numberDecimal"
    	android:textSize="24dp"
    	android:gravity="right"
    	local:MvxBind="Text B" />
    <TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textSize="24dp"
    	android:text="VAlor C:" />
    <EditText
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:inputType="number|numberDecimal"
    	android:textSize="24dp"
    	android:gravity="right"
    	local:MvxBind="Text C" />
    <Button
        android:text="Calculate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        local:MvxBind="Click CalculateCommand" />
	<View
    	android:layout_width="match_parent"
    	android:layout_height="1dp"
    	android:layout_margin="30dp"
    	android:background="@android:color/darker_gray" />
	<TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textSize="24dp"
    	android:text="VAlor x1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:gravity="center"
        local:MvxBind="Text X1"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
    <TextView
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:textSize="24dp"
    	android:text="VAlor x2" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="24dp"
        android:gravity="center"
        local:MvxBind="Text X2"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />
</LinearLayout>